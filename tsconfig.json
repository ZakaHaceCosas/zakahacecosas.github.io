{
    "compilerOptions": {
        "outDir": "./js",
        "module": "commonjs",
        "target": "es6",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["./ts/*.ts"],
    "exclude": ["./js/*.js"]
}
