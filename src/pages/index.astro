    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const counters = [
                {
                    id: "counter-commits",
                    limit: 4000,
                    speed: 0.5,
                },
                {
                    id: "counter-hours",
                    limit: 700,
                    speed: 25,
                },
            ];

            for (const { id, limit, speed } of counters) {
                const el = document.getElementById(id);
                if (!el) continue;

                let started = false;

                const observer = new IntersectionObserver(
                    ([entry]) => {
                        if (!started && entry.isIntersecting) {
                            started = true;
                            let i = 0;
                            const interval = setInterval(() => {
                                if (i >= limit) {
                                    clearInterval(interval);
                                } else {
                                    i++;
                                    el.textContent = i.toString();
                                }
                            }, speed);
                            observer.disconnect();
                        }
                    },
                    { threshold: 0.25 }
                );

                observer.observe(el);
            }
        });
    </script>

